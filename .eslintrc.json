{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    },
    "overrides": [
      {
        "files": ["tests/**/*", "**/*.test.js"],
        "env": {
          "jest": true
        }
      }
    ]
}
